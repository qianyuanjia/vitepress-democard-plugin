{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2018",
    "module": "nodenext",
    "lib": ["ESNext"],
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "rootDir": "./",
    "outDir": "./dist",
    "paths": {
      "tslib": ["node_modules/tslib/tslib.d.ts"]
    }
  },
  "include": [
    "./plugins/**/*.mts",
  ],
  "exclude": ["node_modules", "dist"]
}